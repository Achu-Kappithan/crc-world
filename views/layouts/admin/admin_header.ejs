    <!-- Premium Splash Screen Loader -->
    <style>
        #premium-loader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #f8f9fa; /* Slightly off-white for admin */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 999999;
            transition: opacity 0.5s ease, visibility 0.5s;
        }

        .loader-logo {
            width: 100px;
            margin-bottom: 25px;
            animation: pulse 2s infinite ease-in-out;
        }

        .spinner-container {
            width: 40px;
            height: 40px;
            position: relative;
        }

        .spinner {
            width: 100%;
            height: 100%;
            border: 2px solid rgba(0, 0, 0, 0.05);
            border-top: 2px solid #3bb77e; /* Admin theme green */
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        .loader-text {
            margin-top: 20px;
            font-family: 'Public Sans', sans-serif;
            font-size: 13px;
            letter-spacing: 1.5px;
            color: #253d4e;
            text-transform: uppercase;
            font-weight: 500;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.03); opacity: 0.9; }
        }

        .loader-hidden {
            opacity: 0;
            visibility: hidden;
        }
    </style>
</head>
